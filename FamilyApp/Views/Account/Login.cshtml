@model FamilyApp.AccountModel
@{
    Layout = "_Layout";
}
<br />
<h2 style="text-align:center">Sign in</h2>
<br />
@if (Model.Message != null && Model.Message != string.Empty)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @Model.Message
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<form asp-controller="Account" asp-action="Login" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="email" asp-for="@Model.Login">Email</label>
        <input type="email" class="form-control" id="email" asp-for="@Model.Login" name="Login">
    </div>
    <div class="form-group">
        <label for="password" asp-for="@Model.Password">Password</label>
        <input type="password" class="form-control" id="password" asp-for="@Model.Password" name="Password">
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="rememberMe" asp-for="@Model.RememberMe" name="RememberMe" value="true">
        <label class="form-check-label" for="rememberMe" asp-for="@Model.RememberMe">Remember me</label>
    </div>
    <br />
    <input type="text" style="display: none" name="ReturnUrl" asp-for="ReturnUrl" value="@ViewData["ReturnUrl"]" />
    <div class="d-grid gap-2 col-8 mx-auto">
        <button type="submit" class="btn btn-primary btn-lg">Sign in</button>
    </div>
</form>
<div class="d-grid gap-2 col-8 mx-auto">
    <a href="@Url.Action("register", "account")?ReturnUrl=@ViewData["ReturnUrl"]" class="btn btn-outline-primary btn-lg btn-block" style="margin-top: 7px">New user? Sign up!</a>
</div>
